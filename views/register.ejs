<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /register route -->
          <form action="/users/signup" method="POST">
            <div class="form-group">
              <label for="name">Username</label>
              <input
                type="text"
                class="form-control"
                name="name"
                id="name"
                required
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                required
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              />
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-dark my-2">Register</button>
            </div>

            <!-- Login buttons -->
            <div class="text-center">
              <p>Already user ? <a href="/users/signin">Login</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>

