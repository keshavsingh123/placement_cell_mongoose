<%- include('partials/header') %>

<div class="w-75 mx-auto mt-5">
  <br />

  <div class="row">
    <div class="col-6">
      <h2>List of Students:</h2>
    </div>

    <div class="col-6 d-flex justify-content-end">
      <div class="mt-5 mx-5">
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          âž• Add Student
        </button>
      </div>

      <!-- Modal  -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">
                Student Form
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <form
                class="form"
                action="/students/create-student"
                method="post"
                style="
                  padding: 5px;
                  background-image: linear-gradient(
                    to top,
                    #679694 0%,
                    #c96685 100%
                  );
                  box-shadow: 7px 7px 12px rgba(0, 0, 0, 0.05);
                "
              >
                <fieldset>
                  <label for="batch">Batch</label>
                  <div class="mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="batch"
                      name="batch"
                    />
                  </div>
                </fieldset>

                <fieldset>
                  <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="name"
                      name="name"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input
                      type="email"
                      class="form-control"
                      id="email"
                      placeholder="abc@gmail.com"
                      name="email"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="contactNumber" class="form-label"
                      >Mobile Number</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="contactNumber"
                      name="contactNumber"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="college" class="form-label">College Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="college"
                      name="college"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="placement" class="form-label"
                      >Placement Status</label
                    >
                    <select
                      class="form-select"
                      aria-label="Default select example"
                      name="placement"
                      id="placement"
                    >
                      <option value="Placed">Placed</option>
                      <option value="Not Placed">Not Placed</option>
                    </select>
                  </div>
                </fieldset>

                <fieldset>
                  <div
                    class="mb-3"
                    style="display: flex; justify-content: space-between"
                  >
                    <div class="mb-3 p-1">
                      <label for="dsa" class="form-label">DSA</label>
                      <input
                        type="text"
                        class="form-control"
                        id="dsa"
                        name="dsa"
                      />
                    </div>
                    <div class="mb-3 p-1">
                      <label for="webd" class="form-label"
                        >Web Development</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="webd"
                        name="webd"
                      />
                    </div>
                    <div class="mb-3 p-1">
                      <label for="react" class="form-label">React</label>
                      <input
                        type="text"
                        class="form-control"
                        id="react"
                        name="react"
                      />
                    </div>
                  </div>
                </fieldset>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>

                  <button
                    type="submit"
                    class="btn btn-success align-self-center"
                    style="background: #0d3259"
                  >
                    Create Student
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if(students.length > 0) {%>
  <div class="mt-3 mb-3">
    <table class="table table-bordered table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Batch</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Contact</th>
          <th scope="col">DSA</th>
          <th scope="col">WEB</th>
          <th scope="col">REACT</th>
          <th scope="col">Interview</th>
          <th scope="col" class="text-end">Action</th>
        </tr>
      </thead>

      <tbody id="myTable">
        <% for(let student of students) {%>
        <tr>
          <th scope="row"><%=student.batch%></th>
          <td><%=student.name%></td>
          <td><%=student.email%></td>
          <td><%=student.contactNumber%></td>
          <td><%=student.dsa%></td>
          <td><%=student.webd%></td>
          <td><%=student.react%></td>
          <% if(student.interviews.length) {%>
          <td>
            <% for(let company of student.interviews){%>
            <a href=" " id="compnay_name"><%=company.company%></a>
            <%}%>
          </td>
          <%}else{%>
          <td>NONE</td>
          <%}%>
          <td
            style="
              display: flex;
              justify-content: space-around;
              align-items: center;
            "
          >
            <a
              href="/students/delete/<%=student.id%>"
              type="button"
              class="btn btn-danger btn-small"
              style="background: #ffc107; border: #ffc107; color: black"
              >Delete</a
            >
          </td>
        </tr>
        <%}%>
      </tbody>
    </table>
  </div>
  <%}else{%>
  <div class="w-75 mx-auto mt-5">
    <h2>No Records Found</h2>
  </div>
  <%}%>
</div>
<%- include('partials/footer') %>
